{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Opinionated Renovate shareable config preset",
  "extends": [
    "config:best-practices",
    ":prConcurrentLimit20",
    ":preserveSemverRanges",
    ":semanticPrefixChore",
    "github>kachick/renovate-config-dprint#1.3.0"
  ],
  "ignorePresets": [
    ":semanticPrefixFixDepsChoreOthers"
  ],
  "semanticCommits": "enabled",
  "commitMessageTopic": "{{depName}}",
  // remove configDescription and footer, https://docs.renovatebot.com/configuration-options/#prbodytemplate
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{warnings}}}{{{notes}}}{{{changelogs}}}{{{controls}}}",
  "packageRules": [
    {
      // https://docs.renovatebot.com/key-concepts/minimum-release-age/
      "matchDatasources": ["docker", "github-releases", "github-tags", "gitlab-releases", "gitlab-tags", "go", "npm", "pypi"],
      "minimumReleaseAge": "7 days",
      "minimumReleaseAgeBehaviour": "timestamp-optional", // do not skip altogether if no timestamps available
      "internalChecksFilter": "strict"
    },
    {
      "matchDepNames": ["dprint/dprint-plugin-*"],
      "groupName": "dprint plugins"
    }
  ]
}
